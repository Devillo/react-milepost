@import '../../styles/index.styl'

.{$prefix}axis
  position relative
  display flex
  flex-direction column
  align-items center
  width 100%

  &-line
    position absolute
    top 9px
    width 2px
    height 0px
    background-color #a5bcd1
    transition all $motion-func $motion-duration

  &&-horizontal
    flex-direction row

    .{$prefix}axis-line
      width 0px
      height 2px
      top 299px
