@import '../../styles/index.styl'

.{$prefix}spinner
  &&-rotate > svg
    animation rotate .5s linear infinite

  &&-enlarge > svg
    animation enlarge .5s linear, rotate .5s linear .5s infinite

@keyframes rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

@keyframes enlarge
  0%
    transform scale(1)
  50%
    transform scale(1.5)
  100%
    transform scale(1)
